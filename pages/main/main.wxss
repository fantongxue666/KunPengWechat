.tab{
  width: 90%;
  height: 90rpx;
  margin:auto;
  margin-top: 30rpx;
  display: flex;
}
.tab>view{
  flex: 1;
  /* border: 1px solid black; */
  text-align: center;
}
.active{
font-size: 16px;
font-weight: bold;
}
.tab>view>view{
  width: 30%;
  height: 3px;
  background-color: skyblue;
  margin: auto;
  margin-top: 3px;
}
.tabContent{
  width: 100%;
  /* margin-top: 10rpx; */
}
.stsp>view{
  width: 90%;
  height: 180rpx;
  border: 1px solid lightgray;
  margin:auto;
  margin-top: 40rpx;
  border-radius: 15rpx;
  display: flex;
}
.img{
  flex: 1;
}
.img image{
  height: 38%;
width: 67%;
margin-top: 28%;
margin-left: 18%;

}
.imgRight{
  flex: 4;
}
.imgRight view:first-child{
  font-size: 16px;
  margin-top: 6%;
  font-weight: 600;
}
.imgRight view:last-child{
margin-top: 2%;
font-size: 14px;
color: gray;
}
.cyld>view{
  width: 40%;
  height: 100rpx;
  border: 1px solid lightgray;
  float: left;
  margin-left: 45rpx;
  margin-top: 30rpx;
  border-radius: 10px;
  display: flex;
}
.leftImg{
  flex: 3;
}
.leftImg image{
  height: 70%;
  width: 80%;
  margin-top: 15%;
  margin-left: 15%;
}
.rightImgContent{
  padding-top: 8%;
  flex: 7;
  padding-left: 4%;
}
