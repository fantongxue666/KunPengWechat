/* pages/main/main.wxss */
.top{
  width: 90%;
  height: auto;
  border-radius: 10px;
  overflow: hidden;
  margin: auto;
  margin-top: 10rpx;
  position: relative;
}
swiper{
  width: 100%;
  height: calc(100vw * 352 / 1125);
}
swiper image {
  width: 100%;
  height: 100%;
}
 
.swiper-image {
  height: 100%;
  width: 100%;
}
 
.slide-image {
  height: 100%;
  width: 100%;
  display: block;
}
