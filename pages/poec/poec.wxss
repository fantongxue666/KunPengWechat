page{
  /* background-color: #F5F6F7; */
  background-color: white;
  z-index: -1;
}
.top{
  width: 700rpx;
  /* height: 1000rpx; */
  /* border: 1px solid black; */
  margin:120rpx auto;
  background-color: white;
  padding-bottom: 100rpx;
}
.bar{
  width: 100%;
  height: 70rpx;
  overflow-x: scroll;
}
.bar view{
  display: inline-block;
}
.nav{
  white-space: nowrap;
  padding: 10rpx;
}
.nav_item{
  padding: 20rpx 35rpx;
  font-size: 30rpx;
  display: inline-block;
  color: gray;
}
.active{
  font-weight: bold;
  color: black;
}
.first{
  width: 100%;
  display: flex;
  height: 40rpx;
  margin-top: 20rpx;
}
.first>view:first-child{
  flex: 12;
  /* border: 1px solid blue; */
  font-size: 25rpx;
  padding-left: 20rpx;
}
.first>view:last-child{
  flex: 17;
  /* border: 1px solid blue; */
  padding-top: 1.7%;
  padding-right: 20rpx;
}
.echart{
  width: 100%;
  height: 500rpx;
  margin-top: 100rpx;
}
.kind{
  display: flex;
  width: 90%;
  margin: auto;
  height: 63rpx;
  margin-top: 50rpx;
  margin-bottom: 30rpx;
}
.activesecond{
  border-bottom: 2px solid yellowgreen;
  color: #6A5ACD;
}
.kind>view:first-child{
  flex: 1;
  text-align: center;
  line-height: 63rpx;
  font-size: 35rpx;
  font-family: Microsoft JhengHei;
}
.kind>view:last-child{
  flex: 1;
  text-align: center;
  line-height: 63rpx;
  font-size: 35rpx;
  font-family: Microsoft JhengHei;
}
.top11{
  position: fixed;
  top:0;
  display: flex;
  width: 750rpx;
  height: 100rpx;
  background-color: #5599FF;
  line-height: 100rpx;
  padding-left: 5%;
  margin-bottom: 100rpx;
  color: white;
  margin-bottom: 30rpx;
}